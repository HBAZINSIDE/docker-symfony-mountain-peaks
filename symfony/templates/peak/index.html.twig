{% extends 'base.html.twig' %}

{% block title %}Peak index{% endblock %}

{% block body %}
    <h1>Peak index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Altitude</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for peak in peaks %}
            <tr>
                <td>{{ peak.id }}</td>
                <td>{{ peak.latitude }}</td>
                <td>{{ peak.longitude }}</td>
                <td>{{ peak.altitude }}</td>
                <td>{{ peak.name }}</td>
                <td>
                    <a href="{{ path('peak_show', {'id': peak.id}) }}">show</a>
                    <a href="{{ path('peak_edit', {'id': peak.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('peak_new') }}">Create new</a>
{% endblock %}
